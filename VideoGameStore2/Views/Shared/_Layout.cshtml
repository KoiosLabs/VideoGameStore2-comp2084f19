<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VideoGameStore2</title>

    <link rel="stylesheet" href="~/css/vendor.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="padding-top:60px">
    <nav class="navbar navbar-dark fixed-top bg-dark navbar-expand-lg">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">VideoGameStore2</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>                
            
            <div class="navbar-collapse collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item mr-auto"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item mr-auto"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li class="nav-item mr-auto"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    <li class="nav-item mr-auto"><a class="nav-link" asp-area="" asp-controller="Shop" asp-action="Index">Game Shop</a></li>
                    <li class="nav-item mr-auto"><a class="nav-link" asp-area="" asp-controller="GameManager" asp-action="Index">Game Manager</a></li>
                    <li class="nav-item mr-auto"><a class="nav-link" asp-area="" asp-controller="GenreManager" asp-action="Index">Genre Manager</a></li>
                </ul>

                <partial name="_LoginPartial" />
                <form class="form-inline" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#body" asp-controller="search" asp-action="Index">
                    <input name="query" id="query" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>

            </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div id="body" class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - VideoGameStore2</p>
        </footer>
    </div>


    <script src="~/js/vendor.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
